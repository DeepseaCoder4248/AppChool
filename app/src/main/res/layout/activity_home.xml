            android:id="@+id/btn_home_mainmenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/main_btn_mainmenu" />

        <ImageView
