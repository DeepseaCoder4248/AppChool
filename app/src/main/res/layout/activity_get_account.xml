<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:orientation="vertical"
    tools:context=".GetAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ly_find_account_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0
"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_get_account_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:backgroundTint="#00FFFFFF"
            android:ems="10"

            android:hint="이메일"
            android:inputType="textPersonName"

            android:shadowColor="#1D000000"
            android:shadowDx="2.0"
            android:shadowDy="10.0"
            android:shadowRadius="2.0"
            android:textColor="#7EA4FF"
            android:textColorHint="#7EA4FF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_get_account_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:backgroundTint="#00FFFFFF"
            android:ems="10"

            android:hint="코드"
            android:inputType="textPersonName"

            android:shadowColor="#1D000000"
            android:shadowDx="2.0"
            android:shadowDy="10.0"
            android:shadowRadius="2.0"
            android:textColor="#7EA4FF"
            android:textColorHint="#7EA4FF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/btn_get_account_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/checkmanager_adddate_day_btnok" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"></LinearLayout>
</LinearLayout>