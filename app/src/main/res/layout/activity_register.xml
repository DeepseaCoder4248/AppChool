<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_register_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/register_title" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cbox_register_termOfUse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        android:shadowColor="#1D000000"
        android:shadowDx="2.0"
        android:shadowDy="10.0"
        android:shadowRadius="2.0"
        android:text="이용 약관"
        android:textColor="#7EA4FF"
        android:textSize="15sp" />

    <CheckBox
        android:id="@+id/cbox_register_privacy_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        android:shadowColor="#1D000000"
        android:shadowDx="2.0"
        android:shadowDy="10.0"
        android:shadowRadius="2.0"
        android:text="개인정보 처리 이용 방침"
        android:textColor="#7EA4FF"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_register_addid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:backgroundTint="#7EA4FF"
                    android:ems="10"

                    android:hint="아이디(특수문자 포함 최대 9자리)"
                    android:inputType="textPersonName"
                    android:maxLength="9"
                    android:shadowColor="#1D000000"

                    android:shadowDx="2.0"
                    android:shadowDy="10.0"
                    android:shadowRadius="2.0"
                    android:textColor="#7EA4FF"
                    android:textColorHint="#7EA4FF"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/edt_register_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:backgroundTint="#7EA4FF"
            android:ems="10"
            android:hint="비밀번호"
            android:inputType="textWebPassword"
            android:maxLength="15"
            android:shadowColor="#1D000000"
            android:shadowDx="2.0"
            android:shadowDy="10.0"
            android:shadowRadius="2.0"
            android:textColor="#7EA4FF"
            android:textColorHint="#7EA4FF"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_register_checkPw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:backgroundTint="#7EA4FF"
            android:ems="10"
            android:hint="비밀번호 확인"
            android:inputType="textPersonName|textWebPassword"
            android:maxLength="15"
            android:shadowColor="#1D000000"
            android:shadowDx="2.0"
            android:shadowDy="10.0"
            android:shadowRadius="2.0"
            android:textColor="#7EA4FF"
            android:textColorHint="#7EA4FF"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/edt_register_add_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:backgroundTint="#7EA4FF"
                    android:ems="10"

                    android:hint="이메일"
                    android:inputType="textPersonName"
                    android:shadowColor="#1D000000"

                    android:shadowDx="2.0"
                    android:shadowDy="10.0"
                    android:shadowRadius="2.0"
                    android:textColor="#7EA4FF"
                    android:textColorHint="#7EA4FF"
                    android:textSize="15sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/edt_register_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:backgroundTint="#7EA4FF"
                android:ems="10"

                android:hint="개인코드(4자리)"
                android:inputType="number"
                android:maxLength="4"

                android:shadowColor="#1D000000"
                android:shadowDx="2.0"
                android:shadowDy="10.0"
                android:shadowRadius="2.0"
                android:textColor="#7EA4FF"
                android:textColorHint="#7EA4FF"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:shadowColor="#1D000000"
                    android:shadowDx="2.0"
                    android:shadowDy="10.0"
                    android:shadowRadius="2.0"
                    android:text="출생연도"
                    android:textColor="#7EA4FF"
                    android:textColorHint="#7EA4FF"
                    android:textSize="15sp"

                    />

                <Spinner
                    android:id="@+id/spin_register_birth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#7EA4FF"
                    android:shadowColor="#1D000000"
                    android:shadowDx="2.0"
                    android:shadowDy="10.0"
                    android:shadowRadius="2.0"
                    android:textColor="#7EA4FF"
                    android:textColorHint="#7EA4FF"
                    android:textSize="15sp"

                    />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_register_check_id_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="TextView"
        android:textColor="#D81B60"
        android:translationX="3dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:translationY="20dp">

        <ImageView
            android:id="@+id/btn_register_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/cm_adddate_btnok"
            android:text="Button" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>